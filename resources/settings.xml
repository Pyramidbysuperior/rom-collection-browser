<settings>
	<category label="General">
		<setting id="rcb_skin" label="RCB skin" type="labelenum" values="Confluence|Night|Simplicity" default="Confluence"/>
		<setting id="rcb_logLevel" label="Log level" type="labelenum" values="ERROR|WARNING|INFO|DEBUG" default="INFO"/>
		<setting id="rcb_cachingOption" label="Caching option" type="labelenum" values="CACHEALL|CACHEITEM|CACHEITEMANDNEXT" default="CACHEITEMANDNEXT"/>
		<!--<setting id="rcb_memDB" label="Load the DB into memory" value="false" type="bool" default="false"/>-->
		<setting id="rcb_saveViewStateOnExit" label="Save viewstate on exit" type="bool" default="true"/>
		<setting id="rcb_saveViewStateOnLaunchEmu" label="Save viewstate on launch emu" type="bool" default="true"/>
	</category>
	
	<category label="Import Games">
		<setting id="rcb_scrapOnStartUP" label="Import games on XBMC startup" value="false" type="bool" default="false"/>
		<setting id="rcb_showImportOptions" label="Show import options dialog" type="bool" default="true"/>
		<setting id="rcb_scrapingMode" label="Scraping mode" type="labelenum" values="Automatic: Accurate|Automatic: Guess Matches|Interactive: Select Matches" default="Automatic: Accurate"/>
		<setting id="rcb_fuzzyFactor" label="Game matching fuzzy factor" type="enum" values="0.5|0.6|0.7|0.8|0.9|1.0" default="2"/>
		<setting id="rcb_createNfoWhileScraping" label="Create local nfo file while scraping" type="bool" default="true"/>
		<setting id="rcb_ignoreGamesWithoutDesc" label="Don't import games without description" type="bool" default="false"/>
		<setting id="rcb_ignoreGamesWithoutArtwork" label="Don't import games without artwork" type="bool" default="false"/>
		<setting id="rcb_enableFullReimport" label="Rescrape already imported games" type="bool" default="false"/>
		<setting id="rcb_overwriteWithNullvalues" label="Allow overwrite with null values" type="bool" default="false"/>
		<setting id="rcb_useNfoFolder" label="Use extra nfo folder" type="bool" />
		<setting id="rcb_nfoFolder" label="nfo folder path" type="folder" enable="eq(-1,true)" />
	</category>
	
	<category label="Browse Games">
		<setting id="rcb_showFavoriteStars" label="Show stars for favorites" type="bool" default="true"/>
		<setting id="rcb_showEntryAllConsoles" label="Show filter All Consoles" type="bool" default="true"/>
		<setting id="rcb_showEntryAllGenres" label="Show filter All Genres" type="bool" default="true"/>
		<setting id="rcb_showEntryAllYears" label="Show filter All Years" type="bool" default="true"/>
		<setting id="rcb_showEntryAllPublisher" label="Show filter All Publishers" type="bool" default="true"/>
		<setting id="rcb_showEntryAllChars" label="Show filter All Chars" type="bool" default="true"/>
		<setting id="rcb_preventUnfilteredSearch" label="Prevent unfiltered search" type="bool" default="false"/>
	</category>
	
	<category label="Launch Games">
		<setting id="rcb_escapeEmulatorCommand" label="Escape emulator cmd" value="false" type="bool" default="false"/>
	</category>
	
	<setting id="rcb_view_mode" visible="false" value="" type="text"/>
	<setting id="rcb_launchOnStartup" visible="false" type="bool" default="false"/>
	<setting id="rcb_scrapeOnStartupAction" visible="false" type="labelenum" values="update|cancel|nothing" default="nothing"/>
	<setting id="rcb_favoritesSelected" visible="false" type="bool" default="false"/>
	<setting id="rcb_searchText" visible="false" value="" type="text"/>

</settings>